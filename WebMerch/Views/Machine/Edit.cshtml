@model WebMerch.Models.Machine.EditViewModel
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutHomeDialog.cshtml";
}

@section scripts{
    <script type="text/javascript">


        $(this).ready(function () {
            $.formValidator.initConfig({ formID: "form1", onError: function (msg) { $.lumos.tips(msg); }, onSuccess: function () { return edit(); } });
            //$("#Model_Machine_DeviceId").formValidator().inputValidator({ min: 1, max: 100, onError: "设备ID不能为空，且不超过100个字符" });
            $("#Model_Machine_Name").formValidator().inputValidator({ min: 1, max: 100, onError: "名称不能为空，且不超过100个字符" });
        });

        function edit() {
            art.dialog.confirm(
'确定要保存？',
function () {
    var postData = $("#form1").serializeArray();

    $.lumos.postJson({
        url: "/Machine/Edit",
        data: postData,
        success: function (d) {

            if (d.result == resultType.success) {
                $.lumos.parentDialog().listTable.loadData();
                $.lumos.tips(d.message, true);
            }
            else {
                $.lumos.tips(d.message);
            }

        }
    });
});
            return false;
        }

        //-->
    </script>
}

<form id="form1">

    <div class="gbr-row-title clearfix">
        <div class="pull-left">
            <h5>基本信息</h5>
        </div>
        <div class="pull-right f-tb1-item-pull-right">
            <h6></h6>
        </div>
    </div>
    <input name="Model.Machine.Id" type="hidden" value="@Model.Machine.Id" />
    <table class="f-tb" cellpadding="0" cellspacing="1" style="width:100%">
        <tr>
            <td class="f-tb-t">设备ID：</td>
            <td class="f-tb-c">@Model.Machine.DeviceId</td>
            <td class="f-tb-t"><span class="required-symbol">*</span>名称：</td>
            <td class="f-tb-c"><input name="Model.Machine.Name" class="input-control" type="text" id="Model_Machine_Name" style="width: 150px;" value="@Model.Machine.Name" /></td>
        </tr>
    </table>

</form>

