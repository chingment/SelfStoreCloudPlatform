@model WebMerch.Models.Machine.EditViewModel
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section scripts{
    <script type="text/javascript">


        $(this).ready(function () {
            $.formValidator.initConfig({ formID: "form_machine", onError: function (msg) { art.dialog.tips(msg); } });
            $("#Model_MerchantMachine_MachineName").formValidator({ onShow: "", onFocus: "", onCorrect: "" }).inputValidator({ min: 1, max: 50, onError: "名称不能为空,且不超过50个字符！" });
        });

        function edit() {

            var isValid = $.formValidator.pageIsValid();
            if (isValid) {
                var form = $("#form_machine");

                art.dialog.confirm(
               '确定要保存基本信息？',
                function () {
                    var l_Data = $(form).serializeArray();
                    $.lumos.postJson({
                        isUseHandling: true,
                        url: "/Machine/Edit",
                        data: l_Data,
                        success: function (d) {
                            $.lumos.tips(d.message);
                            $.lumos.parentDialog.listTable.loadData();
                        }
                    });
                });
            }
            return false;
        }

        //-->
    </script>
}

<div class="gbr-row">
    <div class="tab" id="tab1">
        <div class="tab-item">
            <ul>
                <li class="item first selected"><a class="a-btn-info" href="javascript:void(0)">基本信息</a></li>
                <li class="item"><a class="a-btn-info" href="javascript:void(0)">商品信息</a></li>
            </ul>
        </div>
        <div class="tab-content">
            <div class="subcontent">
                <form id="form_machine" name="form_machine">
                    <input id="Model_MerchantMachine_Id" name="Model.MerchantMachine.Id" type="hidden" value="@Model.MerchantMachine.Id" />
                    <table class="f-tb" cellpadding="0" cellspacing="1">
                        <tr>
                            <td class="f-tb-t" style="width:80px;">所属便利店：</td>
                            <td class="f-tb-c">
                                <span>
                                    @Model.Store.Name
                                </span>
                            </td>
                        </tr>
                        <tr>
                            <td class="f-tb-t">设备ID：</td>
                            <td class="f-tb-c">
                                <span>
                                    @Model.Machine.DeviceId
                                </span>
                            </td>
                        </tr>
                        <tr>
                            <td class="f-tb-t">机器名称：</td>
                            <td class="f-tb-c">
                                <span>
                                    <input id="Model_MerchantMachine_MachineName" name="Model.MerchantMachine.MachineName" type="text" class="input-control" value="@Model.MerchantMachine.MachineName" style="width:300px;" />
                                </span>
                            </td>
                        </tr>
                        <tr>
                            <td class="f-tb-t">状态：</td>
                            <td class="f-tb-c">
                                <span>

