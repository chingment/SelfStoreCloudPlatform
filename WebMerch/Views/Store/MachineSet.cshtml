@{
    ViewBag.Title = "RoleUserSel";
    Layout = "~/Views/Shared/_LayoutHomeDialog.cshtml";
}

<script type="text/javascript">

    var listTable;

    $(document).ready(function () {


        $("#txt_StoreId").val($.lumos.getUrlParamValue("id"));

        listTable = $("#list_table").loadDataTable({
            url: "/Biz/Store/MachineList",
            pageIndex: 0,
            searchParams: $("#form1").serializeArray(),
            searchButtonId: "btn_Search",
            containerId: "form1",
            rowDataCombie: function (p_index, p_row) {
                var l_Strlimt = "";
                l_Strlimt += "@Html.IsInPermission("<a href=\\\"javascript:void(0)\\\" operate=\\\"delete\\\"  class=\\\"a-btn\\\" >移除</a>")";
                var l_StrRows = "";
                l_StrRows += "<tr>";
                l_StrRows += "<td class=\"no\" >" + (p_index + 1) + "</td>";
                l_StrRows += "<td class=\"overflow\" title=\"" + p_row.machineSupplierName + "\"   >" + p_row.machineSupplierName + "</td>";
                l_StrRows += "<td class=\"overflow tipitem\" title=\"" + p_row.partnerMachineId + "\"   >" + p_row.partnerMachineId + "</td>";
                l_StrRows += "<td class=\"overflow\" title=\"" + p_row.name + "\">" + p_row.name + "</td>";
                l_StrRows += "<td class=\"operation\">";
                l_StrRows += l_Strlimt;
                l_StrRows += "</td>";
                l_StrRows += "</tr>";
                return l_StrRows;
            },
            operate:
                {
                    "delete": function (keys) {

                        var array = new Array();
                        array.push({ name: "storeId", value: $.lumos.getUrlParamValue("id") });
                        $.each(keys, function (i, n) {
                            array.push({ name: "machineId", value: n.id });
                        });

                        $.lumos.postJson({
                            isUseHandling: true,
                            url: "/Biz/Store/RemoveMachine",
                            data: array,
                            success: function (d) {
                                listTable.loadData();
                                art.dialog.tips(d.message);
                            }
                        });

                    }
                }
        });


        $("#btn_Add").click(function () {

            var url = '/Biz/Store/AddMachine?id=' + $.lumos.getUrlParamValue("id");
            var title = '添加机器人';
            art.dialog.open(url, {
                id: "openDialog333", title: title, width: '600px', height: '400px', lock: true, drag: false, cancelVal: '关闭', cancel: true
            });

        });




    });




</script>

<form id="form1" name="form1">
    @Html.AntiForgeryToken()
    <input type="hidden" name="StoreId" id="txt_StoreId" />
    <div class="search-bar">
        <div class="filter">
            <span class="filter-label">编号：</span>
            <span class="filter-input">
                <input type="text" class="input-control" name="Code" style="width:120px;" />
            </span>
        </div>
        <div class="filter">
            <span class="filter-label">名称：</span>
            <span class="filter-input">
                <input type="text" class="input-control" name="Name" style="width:120px;" />
            </span>
        </div>

        <div class="filter"><input type="button" class="btn btn-search" id="btn_Search" value="查询" /> </div>

        <div class="filter" style="float:right"><input type="button" class="btn btn-sure" id="btn_Add" value="添加机器人" style="margin-left:0px;margin-right:0px;" />  </div>
    </div>
    <div class="list">
        <table id="list_table" class="list-tb" cellpadding="0" cellspacing="0">
            <thead>
                <tr>
                    <th style="width:20%" class="no">
                        序号
                    </th>
                    <th style="width:20%">
                        机器商
                    </th>
                    <th style="width:20%">
                        编号
                    </th>
                    <th style="width:20%">
                        名称
                    </th>
                    <th style="width:20%" class="operation">
                        操作
                    </th>
                </tr>
            </thead>
            <tbody></tbody>
            <tfoot>
                <tr>
                    <td colspan="5">
                        <div class="pull-left">

                        </div>
                        <div class="pull-right pagination">
                            <div class="pagination-info">

                            </div>
                            <div class="pagination-index">

                            </div>
                            <div class="pagination-goto">

                            </div>
                        </div>
                    </td>
                </tr>
            </tfoot>
        </table>
    </div>
</form>


