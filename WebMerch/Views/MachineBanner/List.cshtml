@{
    ViewBag.Title = "";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section scripts{
    <script type="text/javascript">

        var listTable;
        var id = $.lumos.getUrlParamValue("id");
        $(document).ready(function () {

            $('input[name=machineId]').val(id);

            listTable = $("#list_table").loadDataTable({
                url: "/MachineBanner/GetList",
                pageIndex: 0,
                searchParams: $("#form1").serializeArray(),
                searchButtonId: "btn_Search",
                containerId: "form1",
                rowDataCombie: function (p_index, p_row) {
                    var l_Strlimt = "";

                    var l_StrRows = "";
                    l_StrRows += "<tr>";
                    l_StrRows += "<td class=\"no\" >" + (p_index + 1) + "</td>";
                    l_StrRows += "<td class=\"overflow tipitem\" title=\"" + p_row.title + "\"   >" + p_row.title + "</td>";
                    l_StrRows += "<td class=\"overflow\" ><div> <img src=\"" + p_row.imgUrl + "\" style=\"width:50px;height:50px\"><div></td>";
                    l_StrRows += "<td class=\"overflow\" title=\"" + p_row.statusName + "\">" + p_row.statusName + "</td>";
                    l_StrRows += "<td class=\"operation\">";

                    if (p_row.status == 1) {
                        l_StrRows += "<a href=\"javascript:void(0)\" operate=\"del\"   class=\"a-btn a-btn-edit\"  >移除</a>";
                    }


                    l_StrRows += "</td>";
                    l_StrRows += "</tr>";
                    return l_StrRows;
                },
                operate: {
                    "del": function (obj) {
                        art.dialog.confirm("确定删除[" + obj.title + "]？", function () {
                            $.lumos.postJson({
                                url: "/MachineBanner/Delete",
                                data: { id: obj.id },
                                success: function (d) {
                                    $.lumos.tips(d.message);
                                    if (d.result == $.lumos.resultType.success) {
                                        listTable.loadData();
                                    }
                                }
                            });

                            return true;
                        });


                    }
                }
            });


            $("#btn_add").click(function () {

                var url = '/MachineBanner/Add?id=' + id;
                var title = '新建';
                art.dialog.open(url, {
                    id: "openDialog3cd", title: title, width: '450px', height: '300px', lock: true, drag: false, cancelVal: '关闭', cancel: true, okVal: '确定', ok: function () {

                        this.iframe.contentWindow.add();
                        return false;
                    }
                });

            });

        });

        function refresh(type) {
            switch (type) {
                case 1:
                    listTable.loadData();
                    break;
                case 2:
                    listTable.loadData('c');
                    break;
            }
        }


    </script>
}
<div class="gbr-row gbr-page">

    <form id="form1" name="form1">
        <input type="hidden" name="machineId" value="" />

        <div class="search-bar">
            <div class="filter">
                <input type="button" class="btn btn-open" id="btn_add" value="上传新图片" />
            </div>
        </div>

        <div class="list">
            <table id="list_table" class="list-tb" cellpadding="0" cellspacing="0">
                <thead>
                    <tr>
                        <th style="width:25px" class="no">
                            序号
                        </th>
                        <th style="width:30%">
                            标题
                        </th>
                        <th style="width:40%">
                            图片
                        </th>
                        <th style="width:30%">
                            状态
                        </th>
                        <th style="width:25px" class="operation">
                            操作
                        </th>
                    </tr>
                </thead>
                <tbody></tbody>
                <tfoot>
                    <tr>
                        <td colspan="5">
                            <div class="pull-left">
                                <span class="load-tip"></span>
                            </div>
                            <div class="pull-right pagination">
                                <div class="pagination-info">

                                </div>
                                <div class="pagination-index">

                                </div>
                                <div class="pagination-goto">

                                </div>
                            </div>
                        </td>
                    </tr>
                </tfoot>
            </table>
        </div>
    </form>


</div>
