
@{
    ViewBag.Title = "";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script type="text/javascript">

    var listTable;

    $(document).ready(function () {

        listTable = $("#list_table").loadDataTable({
            url: "/ReplenishStaff/GetList",
            pageIndex: 0,
            searchParams: $("#form1").serializeArray(),
            searchButtonId: "btn_Search",
            containerId: "form1",
            rowDataCombie: function (p_index, p_row) {
                var l_Strlimt = "";

                l_Strlimt += "@Html.IsInPermission("<a href=\\\"javascript:void(0)\\\" operate=\\\"edit\\\"   class=\\\"a-btn a-btn-edit\\\"  >移除</a>")";
                var l_StrRows = "";
                l_StrRows += "<tr>";
                l_StrRows += "<td class=\"no\" >" + (p_index + 1) + "</td>";
                l_StrRows += "<td class=\"overflow\" ><img src=" + p_row.headImgUrl + " style=\"width:50px;height:50px;\" /></td>";
                l_StrRows += "<td class=\"overflow\" title=\"" + p_row.nickname + "\">" + p_row.nickname + "</td>";
                l_StrRows += "<td class=\"overflow\" title=\"" + p_row.phoneNumber + "\">" + p_row.phoneNumber + "</td>";
                l_StrRows += "<td class=\"overflow\" title=\"" + p_row.createTime + "\">" + p_row.createTime + "</td>";
                l_StrRows += "<td class=\"operation\">";
                l_StrRows += l_Strlimt;
                l_StrRows += "</td>";
                l_StrRows += "</tr>";
                return l_StrRows;
            },
            operate: {
                "edit": function (obj) {
                    art.dialog.confirm(
                "确定移除手机号[" + obj.phoneNumber + "]的用户？",
                     function () {
                         $.lumos.postJson({
                             isUseHandling: true,
                             url: "/ReplenishStaff/Remove",
                             data: { userId: obj.id },
                             success: function (d) {
                                 listTable.loadData(0);
                             }
                         });
                     });
                }
            }
        });

        $("#btn_Add").click(function () {
            var url = '/ReplenishStaff/Add';
            var title = '添加';
            var dialog = art.dialog.open(url, {
                id: "openDialog", title: title, width: '600px', height: '350px', lock: true, drag: false, cancelVal: '关闭', cancel: true
            });
        });


    });

    function refresh(type) {
        switch (type) {
            case 1:
                listTable.loadData();
                break;
            case 2:
                listTable.loadData('c');
                break;
        }
    }



</script>

<form id="form1" name="form1">
    <div class="search-bar">
        <div class="filter">
            <span class="filter-label">手机号码：</span>
            <span class="filter-input">
                <input type="text" class="input-control" name="PhoneNumber" style="width:120px;" autocomplete="off" />
            </span>
        </div>
        <div class="filter"><input type="button" class="btn btn-search" id="btn_Search" value="查询" /> </div>

        <div class="filter" style="float:right">
            <input type="button" class="btn btn-add" id="btn_Add" value="添加" />
        </div>
    </div>
    <div class="list">
        <table id="list_table" class="list-tb" cellpadding="0" cellspacing="0">
            <thead>
                <tr>
                    <th style="width:5%" class="no">
                        序号
                    </th>
                    <th style="width:20%">

                    </th>
                    <th style="width:20%">
                        昵称
                    </th>
                    <th style="width:10%">
                        手机号码
                    </th>
                    <th style="width:15%">
                        创建时间
                    </th>
                    <th style="width:10%" class="operation">
                        操作
                    </th>
                </tr>
            </thead>
            <tbody></tbody>
            <tfoot>
                <tr>
                    <td colspan="6">
                        <div class="pull-left">
                            <span class="load-tip"></span>
                        </div>
                        <div class="pull-right pagination">
                            <div class="pagination-info">

                            </div>
                            <div class="pagination-index">

                            </div>
                            <div class="pagination-goto">

                            </div>
                        </div>
                    </td>
                </tr>
            </tfoot>
        </table>
    </div>
</form>

