@{
    ViewBag.Title = "";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section scripts{
    <script type="text/javascript">

        var warehouseId = $.lumos.getUrlParamValue("warehouseId");

        $(document).ready(function () {
            $.formValidator.initConfig({ formID: "form_warehouse", onError: function (msg) { $.lumos.tips.tips(msg); } });
            $("#txt_Name").formValidator({ onShow: "", onFocus: "", onCorrect: "" }).inputValidator({ min: 1, max: 50, onError: "名称不能为空,且不超过50个字符" });
            $("#txt_Address").formValidator({ onShow: "", onFocus: "", onCorrect: "" }).inputValidator({ min: 1, max: 100, onError: "地址不能为空,且不超过100个字符" });

            initData();
        });

        function initData() {
            getDetails();
        }

        function edit() {

            var isValid = $.formValidator.pageIsValid();
            if (isValid) {

                art.dialog.confirm(
               '确定要保存基本信息？',
                function () {
                    var name = $("#txt_Name").val();
                    var address = $("#txt_Address").val();
                    var description = $("#txt_Description").val();
                    $.lumos.postJson({
                        isUseHandling: true,
                        url: "/Warehouse/Edit",
                        data: { warehouseId: warehouseId, name: name, address: address, description: description },
                        success: function (d) {
                            $.lumos.tips(d.message);
                            if (d.result == $.lumos.resultType.success) {
                                $.lumos.parentDialog.refresh(2);
                            }
                        }
                    });
                });
            }
            return false;
        }

        function getDetails() {

            $.lumos.getJson({
                url: "/Warehouse/GetDetails",
                urlParams: { warehouseId: warehouseId },
                isUseHandling: true,
                success: function (d) {
                    if (d.result == $.lumos.resultType.success) {
                        var data = d.data;
                        $('#txt_Name').val(data.name);
                        $('#txt_Address').val(data.address);
                        $('#txt_Description').val(data.description);
                    }
                }
            });
        }

    </script>
}
<div class="gbr-row gbr-dialog">
    <div class="gbr-row-title clearfix">
        <div class="pull-left">
            <h5>基本信息</h5>
        </div>
        <div class="pull-right f-tb1-item-pull-right">
            <h6></h6>
        </div>
    </div>
    <table class="f-tb" cellpadding="0" cellspacing="1">
        <tr>
            <td class="f-tb-t" style="width:50px">名称<span class="required-symbol">*</span>：</td>
            <td class="f-tb-c">
                <span>
                    <input id="txt_Name" type="text" class="input-control" value="" style="width:200px;" autocomplete="off" />
                </span>
            </td>
        </tr>
        <tr>
            <td class="f-tb-t">地址：</td>
            <td class="f-tb-c">
                <span>
                    <input id="txt_Address" type="text" class="input-control" value="" style="width:300px;" autocomplete="off" />
                </span>
            </td>
        </tr>
        <tr>
            <td class="f-tb-t" style="width:50px">
                描述：
            </td>
            <td class="f-tb-c">
                <textarea id="txt_Description" class="ckeditor" style="width:80%;height:150px;"></textarea>
            </td>
        </tr>
        <tr style="display:none">
            <td class="f-tb-t"></td>
            <td class="f-tb-c">
                <input type="button" value="保存" class="btn btn-sure" onclick="return edit();" />
            </td>
        </tr>
    </table>


</div>