@{
    ViewBag.Title = "";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section scripts{
    <script type="text/javascript">

        var machineId = $.lumos.getUrlParamValue("machineId");
        $(this).ready(function () {
            $.formValidator.initConfig({ formID: "form1", onError: function (msg) { $.lumos.tips(msg); } });
            $("#txt_MacAddress").formValidator().inputValidator({ min: 1, max: 100, onError: "Mac地址不能为空，且不超过100个字符" });
            $("#txt_Name").formValidator().inputValidator({ min: 1, max: 100, onError: "名称不能为空，且不超过100个字符" });

            initData();
        });

        function initData() {
            getDetails();
        }

        function edit() {
            var isValid = $.formValidator.pageIsValid();
            if (isValid) {
                art.dialog.confirm('确定要保存？', function () {
                    var macAddress = $("#txy_MacAddress").val();
                    var name = $("#txt_Name").val();
                    $.lumos.postJson({
                        url: "/Biz/Machine/Edit",
                        data: { machineId: machineId, macAddress: macAddress, name: name },
                        success: function (d) {
                            if (d.result == $.lumos.resultType.success) {
                                $.lumos.parentDialog.refresh(2);
                                $.lumos.tips(d.message);
                            }
                            else {
                                $.lumos.tips(d.message);
                            }
                        }
                    });
                });
            }
            return false;
        }

        function getDetails() {

            $.lumos.getJson({
                url: "/Biz/Machine/GetDetails",
                urlParams: { machineId: machineId },
                isUseHandling: true,
                success: function (d) {
                    if (d.result == $.lumos.resultType.success) {
                        var data = d.data;
                        $('#lbl_DeviceId').text(data.deviceId);
                        $("#txy_MacAddress").val(data.macAddress);
                        $("#txt_Name").val(data.name);
                    }
                }
            });
        }

        //-->
    </script>
}

<div class="gbr-row gbr-dialog">

    <div class="gbr-row-title clearfix">
        <div class="pull-left">
            <h5>基本信息</h5>
        </div>
        <div class="pull-right f-tb1-item-pull-right">
            <h6></h6>
        </div>
    </div>

    <table class="f-tb" cellpadding="0" cellspacing="1" style="width:100%">
        <tr>
            <td class="f-tb-t">设备ID：</td>
            <td class="f-tb-c"><span id="lbl_DeviceId"></span> </td>
            <td class="f-tb-t"><span class="required-symbol">*</span>Mac地址：</td>
            <td class="f-tb-c"><input class="input-control" type="text" id="txy_MacAddress" style="width: 150px;" value="" autocomplete="off" /></td>
        </tr>
        <tr>
            <td class="f-tb-t"><span class="required-symbol">*</span>名称：</td>
            <td class="f-tb-c"><input class="input-control" type="text" id="txt_Name" style="width: 150px;" value="" autocomplete="off" /></td>
            <td class="f-tb-t"></td>
            <td class="f-tb-c"></td>
        </tr>
    </table>

</div>

