@{
    ViewBag.Title = "";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section scripts{
    <script type="text/javascript">

        var machineId = $.lumos.getUrlParamValue("machineId");
        var merchantId;
        var isUse = false;
        $(this).ready(function () {
            initData();
        });

        function initData() {
            getDetails();
        }

        function bind() {

            if ($.lumos.isNullOrEmpty(merchantId)) {
                $.lumos.tips('请选择商户');
                return;
            }

            var opName = (isUse == false ? "绑定" : "解绑");

            art.dialog.confirm('确定要' + opName + '？', function () {

                $.lumos.postJson({
                    url: "/Biz/Machine/Bind",
                    isUseHandling: true,
                    data: { machineId: machineId, merchantId: merchantId },
                    success: function (d) {
                        if (d.result == $.lumos.resultType.success) {
                            $.lumos.parentDialog.refresh(2);
                            $.lumos.tips(d.message, true);
                        }
                        else {
                            $.lumos.tips(d.message);
                        }
                    }
                });
            });
            return false;
        }

        function getMerchantDetails(obj) {
            merchantId = obj.id;
            $('#lbl_Merchant_Name').text(obj.merchantName);
            $('#lbl_Merchant_ContactName').text(obj.contactName);
            $('#lbl_Merchant_ContactPhone').text(obj.contactPhone);
            $('#lbl_Merchant_ContactAddress').text(obj.contactAddress);
        }

        function getDetails() {

            $.lumos.getJson({
                url: "/Biz/Machine/GetDetails",
                urlParams: { machineId: machineId },
                isUseHandling: true,
                success: function (d) {
                    if (d.result == $.lumos.resultType.success) {
                        var data = d.data;
                        $('#lbl_DeviceId').text(data.deviceId);
                        $("#lbl_MacAddress").text(data.macAddress);
                        $("#lbl_Name").text(data.name);

                        isUse = data.isUse;

                        if (!data.isUse) {
                            $('#btn_select_mrchUser').show();
                        }

                        merchantId = data.merchant.merchantId;

                        $("#lbl_Merchant_Name").text(data.merchant.name);
                        $("#lbl_Merchant_ContactPhone").text(data.merchant.contactPhone);
                        $("#lbl_Merchant_ContactName").text(data.merchant.contactName);
                        $("#lbl_Merchant_ContactAddress").text(data.merchant.contactAddress);
                    }
                }
            });
        }
        //-->
    </script>
}

