@{
    ViewBag.Title = "";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section scripts{
    <script type="text/javascript">

        var merchantId = $.lumos.getUrlParamValue("merchantId");
        var list_machine;
        $(this).ready(function () {
            $('input[name=MerchantId]').val(merchantId);
            $.formValidator.initConfig({ formID: "form_merchant", onError: function (msg) { $.lumos.tips(msg); } });
            $("#txt_Password").formValidator().regexValidator({ regExp: regexEnum.password, onError: "密码由6到20个数字、英文字母或下划线组成" });
            $("#txt_Password").attr("disabled", true).unFormValidator(true);
            $("#txt_ContactName").formValidator().inputValidator({ min: 1, max: 100, onError: "联系人不能为空，且不超过100个字符" });
            $("#txt_ContactPhone").formValidator().inputValidator({ min: 1, max: 100, onError: "联系电话不能为空，且不超过100个字符" });

            $("#abtn-editPwd").toggle(function () {
                $("#lbl_Password").hide();
                $("#txt_Password").show();
                $("#txt_Password").attr("disabled", false).unFormValidator(false);
                $(this).text("取消");
            }, function () {
                $("#lbl_Password").show();
                $("#txt_Password").hide();
                $("#txt_Password").val("");
                $("#txt_Password").attr("disabled", true).unFormValidator(true);
                $(this).text("修改");
            });


            list_machine = $("#list_machine").loadDataTable({
                url: "/Biz/Merchant/GetMachineListByBinded",
                pageIndex: 0,
                searchParams: $("#form_machine").serializeArray(),
                searchButtonId: "btn_Search",
                containerId: "form_machine",
                rowDataCombie: function (p_index, p_row) {
                    var l_Strlimt = "";
                    l_Strlimt += "@Html.IsInPermission("<a href=\\\"javascript:void(0)\\\" operate=\\\"bindoff\\\"  class=\\\"a-btn\\\" >解绑</a>")";
                    var l_StrRows = "";
                    l_StrRows += "<tr>";
                    l_StrRows += "<td class=\"no\" >" + (p_index + 1) + "</td>";
                    l_StrRows += "<td class=\"overflow tipitem\" title=\"" + p_row.deviceId + "\"   >" + p_row.deviceId + "</td>";
                    l_StrRows += "<td class=\"overflow\" title=\"" + p_row.machineName + "\"   >" + p_row.machineName + "</td>";
                    l_StrRows += "<td class=\"overflow\" title=\"" + p_row.macAddress + "\">" + p_row.macAddress + "</td>";
                    l_StrRows += "<td class=\"operation\">";
                    l_StrRows += l_Strlimt;
                    l_StrRows += "</td>";
                    l_StrRows += "</tr>";
                    return l_StrRows;
                },
                operate:
                    {
                        "bindoff": function (obj) {
                            art.dialog.confirm("确定要解绑,数据会被清除，慎重操作？", function () {
                                $.lumos.postJson({
                                    isUseHandling: true,
                                    url: "/Biz/Merchant/BindOffMachine",
                                    data: { merchantId: obj.merchantId, machineId: obj.machineId },
                                    success: function (d) {
                                        list_machine.loadData(0);
                                        $.lumos.tips(d.message);
                                    }
                                });
                            });
                        }
                    }
            });



            $("#btn_add_machine").click(function () {

                var url = '/Biz/Merchant/MachineListByBindable?merchantId=' + merchantId;
                var title = '选择绑定';
                art.dialog.open(url, {
                    id: "openDialog333", title: title, width: '600px', height: '400px', lock: true, drag: false, cancelVal: '关闭', cancel: true
                });

            });

            $("#btn_edit").click(function () {
                edit();
            });

            initData();
        });

        function initData() {
            getDetails();
        }

        function edit() {
            var isValid = $.formValidator.pageIsValid();
            if (isValid) {
                art.dialog.confirm('确定要保存？', function () {

                    var password = $("#txt_Password").val();
                    var contactName = $("#txt_ContactName").val();
                    var contactPhone = $("#txt_ContactPhone").val();
                    var contactAddress = $("#txt_ContactAddress").val();
                    $.lumos.postJson({
                        url: "/Biz/Merchant/Edit",
                        data: { merchantId: merchantId, password: password, contactName: contactName, contactPhone: contactPhone, contactAddress: contactAddress },
                        success: function (d) {
                            $.lumos.tips(d.message);
                            if (d.result == $.lumos.resultType.success) {
                                $.lumos.parentDialog.refresh(2);
                            }
                        }
                    });
                });
            }

            return false;
        }

        function getDetails() {

            $.lumos.getJson({
                url: "/Biz/Merchant/GetDetails",
                urlParams: { merchantId: merchantId },
                isUseHandling: true,
                success: function (d) {
                    if (d.result == $.lumos.resultType.success) {
                        var data = d.data;
                        $('#lbl_UserName').text(data.userName);
                        $('#lbl_MerchantName').text(data.merchantName);
                        $("#txt_ContactName").val(data.contactName);
                        $("#txt_ContactPhone").val(data.contactPhone);
                        $("#txt_ContactAddress").val(data.contactAddress);
                    }
                }
            });
        }

        function refresh(type) {
            switch (type) {
                case 1:
                    list_machine.loadData(0);
                    break;
            }
        }

        //-->
    </script>
}


<div class="gbr-row gbr-dialog">
    <div class="tab" id="tab1">
        <div class="tab-item">
            <ul>
                <li class="item first selected"><a class="a-btn-info" href="javascript:void(0)">基本信息</a></li>
                <li class="item"><a class="a-btn-info" href="javascript:void(0)">机器管理</a></li>
            </ul>
        </div>
        <div class="tab-content">
            <div class="subcontent">
                <form id="form_merchant">
                    <div class="gbr-row-title clearfix">
                        <div class="pull-left">
                            <h5>账号信息</h5>
                        </div>
                        <div class="pull-right f-tb1-item-pull-right">
                            <h6></h6>
                        </div>
                    </div>

                    <table class="f-tb" cellpadding="0" cellspacing="1">
                        <tr>
                            <td class="f-tb-t">
