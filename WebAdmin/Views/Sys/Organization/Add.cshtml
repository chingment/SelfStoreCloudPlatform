@{
    ViewBag.Title = "";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section scripts{
    <script type="text/javascript">

        var pOrganizationId = $.lumos.getUrlParamValue("pOrganizationId");
        var pOrganizationName = $.lumos.getUrlParamValue("pOrganizationName");

        $(this).ready(function () {
            $.formValidator.initConfig({ formID: "form1", onError: function (msg) { } });
            $("#txt_Name").formValidator({ onShow: "&nbsp;", onFocus: "不能为空,且不超过20个字符", onCorrect: "&nbsp;" }).inputValidator({ min: 1, max: 20, empty: { leftEmpty: false, emptyError: "不能为空" }, onError: "不能为空,且不超过20个字符" });
            $("#txt_Url").formValidator({ onShow: "&nbsp;", onFocus: "不超过200个字符", onCorrect: "&nbsp;", empty: true, onEmpty: "&nbsp;" }).inputValidator({ min: 0, max: 200, onError: "不超过200个字符" });
            $("#txt_Description").formValidator({ onShow: "&nbsp;", onFocus: "不超过500个字符", onCorrect: "&nbsp;", empty: true, onEmpty: "&nbsp;" }).inputValidator({ min: 0, max: 500, onError: "不超过500个字符" });

            initData();
        });

        function initData() {
            $('#lbl_POrganizationName').text(pOrganizationName);
        }


        function add() {

            var isValid = $.formValidator.pageIsValid();
            if (!isValid)
                return;

            art.dialog.confirm('确定要新建？', function () {
                var name = $("#txt_Name").val();
                var description = $("#txt_Description").val();

                $.lumos.postJson({
                    url: "/Organization/Add",
                    isUseHandling: true,
                    data: { pId: pOrganizationId, name: name, description: description },
                    success: function (d) {
                        if (d.result == $.lumos.resultType.success) {
                            $.lumos.parentDialog.refresh(1);
                            $.lumos.tips(d.message, true);
                        }
                        else {
                            $.lumos.tips(d.message);
                        }
                    }
                });
            });

            return false;
        }

    </script>
}

<div class="gbr-row gbr-dialog">
    <div class="gbr-row-title clearfix">
        <div class="pull-left">
            <h5>基本信息</h5>
        </div>
        <div class="pull-right f-tb1-item-pull-right">
            <h6></h6>
        </div>
    </div>
    <table class="f-tb" cellpadding="0" cellspacing="1">
        <tr>
            <td class="f-tb-t">
                上级名称：
            </td>
            <td class="f-tb-c">
                <label id="lbl_POrganizationName"></label>
            </td>
        </tr>
        <tr>
            <td class="f-tb-t">
                名称：
            </td>
            <td class="f-tb-c">
                <input type="text" autocomplete="off" id="txt_Name" style="width:250px;" class="input-control" />
                <span id="txt_NameTip"></span>
            </td>
        </tr>
        <tr>
            <td class="f-tb-t">
                备注：
            </td>
            <td class="f-tb-c">
                <textarea rows="5" cols="46" id="txt_Description" class="input-control"></textarea>
                <span id="txt_DescriptionTip"></span>
            </td>
        </tr>
        <tr style="display:none">
            <td class="f-tb-t"></td>
            <td class="f-tb-c">
                <input type="submit" name="btn_Submit" id="btn_Submit" value="确定" class="btn btn-sure" />
                <input type="button" name="btn_Cancle" id="btn_Cancle" value="关闭" class="btn btn-close dialog-close" />
            </td>
        </tr>
    </table>
</div>



