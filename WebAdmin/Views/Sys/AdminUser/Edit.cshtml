@{
    ViewBag.Title = "";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section scripts{
    <script type="text/javascript">
        var id = $.lumos.getUrlParamValue("id");
        var tree_Roles;
        $(this).ready(function () {

            $.formValidator.initConfig({ formID: "form1", onError: function (msg) { $.lumos.tips(msg); } });
            $("#txt_FullName").formValidator().inputValidator({ min: 1, max: 50, onError: "姓名不能为空，且不能超过50个字符" });
            $("#txt_Email").formValidator().regexValidator({ min: 0, max: 100, regExp: regexEnum.email, onError: "邮箱格式且不能超过100个字符" });
            $("#txt_PhoneNumber").formValidator().regexValidator({ min: 0, max: 100, regExp: regexEnum.mobile, onError: "手机号码格式" });

            $("#abtn-editPwd").toggle(function () {
                $("#lbl_Password").hide();
                $("#txt_Password").show();
                $(this).text("取消");
            }, function () {
                $("#lbl_Password").show();
                $("#txt_Password").hide();
                $("#txt_Password").val("");
                $(this).text("修改");
            }
            );

            initData();

        });

        function initData() {
            loadRoles();
            getDetails();
        }

        function loadRoles() {
            $.lumos.getJson({
                url: "/Sys/Role/GetAll",
                urlParams: { belongSite: 1 },
                isUseHandling: true,
                success: function (d) {
                    if (d.result == $.lumos.resultType.success) {
                        var roles = d.data;
                        tree_Roles = $.fn.zTree.init($("#tree_Roles"), {
                            view: {
                                selectedMulti: false
                            },
                            check: {
                                enable: true,
                                chkboxType: { "Y": "s", "N": "s" }
                            },
                            data: {
                                simpleData: {
                                    enable: true
                                }
                            }
                        }, roles);
                    }
                }
            });
        }

        function getDetails() {

            $.lumos.getJson({
                url: "/Sys/AdminUser/GetDetails",
                urlParams: { id: id },
                isUseHandling: true,
                success: function (d) {
                    if (d.result == $.lumos.resultType.success) {
                        var data = d.data;

                        $('#lbl_UserName').text(data.userName);
                        $("#txt_FullName").val(data.fullName);
                        $("#txt_Email").val(data.email);
                        $("#txt_PhoneNumber").val(data.phoneNumber);

                        if (data.roleIds != null) {
                            if (data.roleIds.length > 0) {
                                $.each(data.roleIds, function (i, n) {
                                    var node = tree_Roles.getNodeByParam("id", n);
                                    tree_Roles.checkNode(node);
                                });
                            }
                        }
                    }
                }
            });
        }

        function edit() {

            var password = $("#txt_Password").val();

            var isValid = $.formValidator.pageIsValid();
            if (!isValid)
                return false;

            if (password != "") {
                var isFlag = password.match(regexEnum.password);
                if (isFlag == null) {
                    $.lumos.tips('密码由6到20个数字、英文字母或下划线组成');
                    return;
                }
            }

            art.dialog.confirm('确定要保存？', function () {

                var tree_RolesByChecked = tree_Roles.getCheckedNodes(true);
                var roleIds = [];
                $.each(tree_RolesByChecked, function (i, n) {
                    roleIds.push(n.id);
                });

                var userName = $("#txt_UserName").val();
                var fullName = $("#txt_FullName").val();
                var email = $("#txt_Email").val();
                var phoneNumber = $("#txt_PhoneNumber").val();

                $.lumos.postJson({
                    url: "/Sys/AdminUser/Edit",
                    isUseHandling: true,
                    data: { id: id, userName: userName, password: password, fullName: fullName, email: email, phoneNumber: phoneNumber, roleIds: roleIds },
                    success: function (d) {
                        if (d.result == $.lumos.resultType.success) {
                            $.lumos.parentDialog.refresh(2);
                            $.lumos.tips(d.message);
                        }
                        else {
                            $.lumos.tips(d.message);
                        }
                    }
                });
            });

            return false;
        }
    </script>
}

<div class="gbr-row gbr-dialog">
    <div class="gbr-row-title clearfix">
        <div class="pull-left">
            <h5>基本信息</h5>
        </div>
        <div class="pull-right f-tb1-item-pull-right">
            <h6></h6>
        </div>
    </div>
    <table class="f-tb" cellpadding="0" cellspacing="1">
        <tr>
            <td class="f-tb-t">
                用户名：
            </td>
            <td class="f-tb-c">
                <label id="lbl_UserName"></label>
            </td>
        </tr>
        <tr>
            <td class="f-tb-t">
                <span class="required-symbol">*</span>密码：
            </td>
            <td class="f-tb-c">
                <label id="lbl_Password">******</label>

                <input id="txt_Password" class="input-control" autocomplete="off" type="password" style="width: 150px;display:none;" />
                <a class="a-btn" id="abtn-editPwd" href="javascript:void(0)">修改</a>
            </td>
        </tr>
        <tr>
            <td class="f-tb-t">
                <span class="required-symbol">*</span>姓名：
            </td>
            <td class="f-tb-c">
                <input name="txt_FullName" class="input-control" type="text" id="txt_FullName" value="" style="width: 150px;" autocomplete="off" />
            </td>
        </tr>
        <tr>
            <td class="f-tb-t">
                E-mail：
            </td>
            <td class="f-tb-c">
                <input id="txt_Email" class="input-control" type="text" value="" style="width: 150px;" autocomplete="off" />
            </td>
        </tr>
        <tr>
            <td class="f-tb-t">
                手机：
            </td>
            <td class="f-tb-c">
                <input id="txt_PhoneNumber" class="input-control" type="text" value="" style="width: 150px;" autocomplete="off" />
            </td>
        </tr>
        <tr>
            <td class="f-tb-t">
                角色：
            </td>
            <td class="f-tb-c">
                <ul id="tree_Roles" class="ztree"></ul>
            </td>
        </tr>
        <tr style="display:none">
            <td class="f-tb-t"></td>
            <td class="f-tb-c">
                <input type="submit" name="btn_Submit" id="btn_Submit" value="保存" class="btn btn-save" />
                <input type="button" name="btn_Cancle" id="btn_Cancle" value="关闭" class="btn btn-close dialog-close" />
            </td>
        </tr>
    </table>

</div>






