@{
    ViewBag.Title = "";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@section scripts{
    <script type="text/javascript">

        var id = $.lumos.getUrlParamValue("id");

        $(this).ready(function () {

            initData();

        });

        function initData() {
            $.lumos.getJson({
                url: "/Sys/User/GetDetails",
                urlParams: { id: id },
                isUseHandling: true,
                success: function (d) {
                    if (d.result == $.lumos.resultType.success) {
                        var data = d.data;

                        $('#lbl_UserName').text(data.userName);
                        $("#lbl_FullName").text(data.fullName);
                        $("#lbl_Email").text(data.email);
                        $("#lbl_PhoneNumber").text(data.phoneNumber);
                    }
                }
            });
        }

    </script>
}

<div class="gbr-row gbr-dialog">
    <div class="gbr-row-title clearfix">
        <div class="pull-left">
            <h5>基本信息</h5>
        </div>
        <div class="pull-right f-tb1-item-pull-right">
            <h6></h6>
        </div>
    </div>
    <table class="f-tb" cellpadding="0" cellspacing="1">
        <tr>
            <td class="f-tb-t">
                用户名：
            </td>
            <td class="f-tb-c">
                <span id="lbl_UserName"></span>
            </td>
        </tr>
        <tr>
            <td class="f-tb-t">
                姓名：
            </td>
            <td class="f-tb-c">
                <span id="lbl_FullName"></span>
            </td>
        </tr>
        <tr>
            <td class="f-tb-t">
                E-mail：
            </td>
            <td class="f-tb-c">
                <span id="lbl_Email"></span>
            </td>
        </tr>
        <tr>
            <td class="f-tb-t">
                手机：
            </td>
            <td class="f-tb-c">
                <span id="lbl_PhoneNumber"></span>
            </td>
        </tr>
