@{
    ViewBag.Title = "";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section scripts{
    <script type="text/javascript">

        var tree_Roles;
        $(this).ready(function () {

            $.formValidator.initConfig({ formID: "form1" });
            $("#txt_UserName").formValidator({ onShow: "&nbsp;", onFocus: "由3到20个数字、英文字母或下划线组成", onCorrect: "&nbsp;" }).regexValidator({ min: 3, max: 20, regExp: "^[0-9a-zA-Z_]{3,20}$", onError: "由3到20个数字、英文字母或下划线组成" });
            $("#txt_Password").formValidator({ onShow: "&nbsp;", onFocus: "由6到20个数字、英文字母或下划线组成", onCorrect: "&nbsp;" }).regexValidator({ regExp: regexEnum.password, onError: "由6到20个数字、英文字母或下划线组成" });
            $("#txt_FullName").formValidator({ onShow: "&nbsp;", onFocus: "不超过50个字符", onCorrect: "&nbsp;" }).inputValidator({ min: 1, max: 50, empty: { leftEmpty: false, emptyError: "不能有空格" }, onError: "不超过50个字符" });
            $("#txt_Email").formValidator({ onShow: "&nbsp;", onFocus: "邮箱格式且不超过100个字符", onCorrect: "&nbsp;", empty: true, onEmpty: "&nbsp;" }).inputValidator({ min: 0, max: 100, onError: "邮箱格式且不超过100个字符" }).regexValidator({ regExp: regexEnum.email, onError: "邮箱格式且不超过100个字符" });
            $("#txt_PhoneNumber").formValidator({ onShow: "&nbsp;", onFocus: "手机号码格式", onCorrect: "&nbsp;", empty: true, onEmpty: "&nbsp;" }).regexValidator({ regExp: regexEnum.mobile, onError: "手机号码格式" });

            initData();
        });

        function initData() {

            loadRoles();
        }


        function loadRoles() {

            $.lumos.getJson({
                url: "/Sys/Role/GetAll",
                isUseHandling: true,
                success: function (d) {
                    if (d.result == $.lumos.resultType.success) {
                        var roles = d.data;
                        tree_Roles = $.fn.zTree.init($("#tree_Roles"), {
                            view: {
                                selectedMulti: false
                            },
                            check: {
                                enable: true,
                                chkboxType: { "Y": "s", "N": "s" }
                            },
                            data: {
                                simpleData: {
                                    enable: true
                                }
                            }
                        }, roles);
                    }
                }
            });
        }

        function add() {

            var isValid = $.formValidator.pageIsValid();
            if (isValid) {
                art.dialog.confirm('确定要新建？', function (e) {
                    var tree_RolesByChecked = tree_Roles.getCheckedNodes(true);
                    var roleIds = [];
                    $.each(tree_RolesByChecked, function (i, n) {
                        roleIds.push(n.id);
                    });


                    var userName = $("#txt_UserName").val();
                    var password = $("#txt_Password").val();
                    var fullName = $("#txt_FullName").val();
                    var email = $("#txt_Email").val();
                    var phoneNumber = $("#txt_PhoneNumber").val();

                    $.lumos.postJson({
                        url: "/Sys/StaffUser/Add",
                        data: { userName: userName, password: password, fullName: fullName, email: email, phoneNumber: phoneNumber, roleIds: roleIds },
                        isUseHandling: true,
                        success: function (d) {
                            if (d.result == $.lumos.resultType.success) {
                                $.lumos.parentDialog.refresh(1);
                                $.lumos.tips(d.message, true);
                            }
                            else {
                                $.lumos.tips(d.message);
                            }
                        }
                    });
                });
            }
            return false;
        }


    </script>
}



<div class="gbr-row gbr-dialog">
    <div class="gbr-row-title clearfix">
        <div class="pull-left">
            <h5>基本信息</h5>
        </div>
        <div class="pull-right f-tb1-item-pull-right">
            <h6></h6>
        </div>
    </div>
        <table class="f-tb" cellpadding="0" cellspacing="1">
            <tr>
                <td class="f-tb-t">
                    用户名：
                </td>
                <td class="f-tb-c">
                    Up
                    <input id="txt_UserName" class="input-control" autocomplete="off" type="text" style="width: 128px;" clear="on" />
                    <span id="txt_UserNameTip"></span>
                </td>
            </tr>
            <tr>
                <td class="f-tb-t">
                    密码：
                </td>
                <td class="f-tb-c">
                    <input id="txt_Password" class="input-control" autocomplete="off" type="password" style="width: 150px;" />
                    <span id="txt_PasswordTip"></span>
                </td>
            </tr>
            <tr>
                <td class="f-tb-t">
                    姓名：
                </td>
                <td class="f-tb-c">
                    <input id="txt_FullName" class="input-control" type="text" style="width: 150px;" autocomplete="off" />
                    <span id="txt_FullNameTip"></span>
                </td>
            </tr>
            <tr>
                <td class="f-tb-t">
                    E-mail：
                </td>
                <td class="f-tb-c">
                    <input id="txt_Email" class="input-control" type="text" style="width: 150px;" autocomplete="off" />
                    <span id="txt_EmailTip"></span>
                </td>
            </tr>
            <tr>
                <td class="f-tb-t">
                    手机：
                </td>
                <td class="f-tb-c">
                    <input id="txt_PhoneNumber" class="input-control" type="text" style="width: 150px;" autocomplete="off" />
                    <span id="txt_PhoneNumberTip"></span>
                </td>
            </tr>
            <tr>
                <td class="f-tb-t">
                    角色：
                </td>
                <td class="f-tb-c">
                    <ul id="tree_Roles" class="ztree"></ul>
                </td>
            </tr>
            <tr style="display:none">
                <td class="f-tb-t"></td>
                <td class="f-tb-c">
                    <input type="submit" name="btn_Submit" id="btn_Submit" value="确定" class="btn btn-sure" />
                    <input type="button" name="btn_Cancle" id="btn_Cancle" value="关闭" class="btn btn-close dialog-close" />
                </td>
            </tr>
        </table>
</div>

