@{
    ViewBag.Title = "";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section scripts{
    <script type="text/javascript">

        var backgroundJobId = $.lumos.getUrlParamValue("backgroundJobId");
        $(this).ready(function () {

            $.formValidator.initConfig({ formID: "form1", onError: function (msg) { $.lumos.tips(msg); } });
            $("#txt_AssemblyName").formValidator().inputValidator({ min: 1, max: 50, empty: { leftEmpty: false, emptyError: "不能为空且不超过100个字符" }, onError: "不能为空且不超过100个字符" });
            $("#txt_ClassName").formValidator().inputValidator({ min: 1, max: 50, empty: { leftEmpty: false, emptyError: "不能为空且不超过100个字符" }, onError: "不能为空且不超过100个字符" });
            $("#txt_Description").formValidator().inputValidator({ min: 1, max: 50, empty: { leftEmpty: false, emptyError: "不能为空且不超过100个字符" }, onError: "不能为空且不超过100个字符" });
            $("#txt_CronExpression").formValidator().inputValidator({ min: 1, max: 50, empty: { leftEmpty: false, emptyError: "不能为空且不超过100个字符" }, onError: "不能为空且不超过100个字符" });
            $("#txt_CronExpressionDescription").formValidator().inputValidator({ min: 1, max: 50, empty: { leftEmpty: false, emptyError: "不能为空且不超过100个字符" }, onError: "不能为空且不超过100个字符" });

            initData();

        });

        function initData() {
            getDetails();
        }


        function getDetails() {

            $.lumos.getJson({
                url: "/Sys/BackgroundJob/GetDetails",
                urlParams: { backgroundJobId: backgroundJobId },
                isUseHandling: true,
                success: function (d) {
                    if (d.result == $.lumos.resultType.success) {
                        var data = d.data;

                        $('#lbl_Name').text(data.name);
                        $("#lbl_AssemblyName").text(data.assemblyName);
                        $("#lbl_ClassName").text(data.className);
                        $("#txt_Description").val(data.description);
                        $("#txt_JobArgs").val(data.jobArgs);
                        $("#txt_CronExpression").val(data.cronExpression);
                        $("#txt_CronExpressionDescription").val(data.cronExpressionDescription);
                        $("#txt_Description").val(data.description);
                    }
                }
            });
        }

        function edit() {
            var isValid = $.formValidator.pageIsValid();
            if (isValid) {
                art.dialog.confirm('确定要保存？', function () {

                    var assemblyName = $("#txt_AssemblyName").val();
                    var className = $("#txt_ClassName").val();
                    var description = $("#txt_Description").val();
                    var jobArgs = $("#txt_JobArgs").val();
                    var cronExpression = $("#txt_CronExpression").val();
                    var cronExpressionDescription = $("#txt_CronExpressionDescription").val();

                    $.lumos.postJson({
                        url: "/Sys/BackgroundJob/Edit",
                        isUseHandling: true,
                        data: { backgroundJobId: backgroundJobId, assemblyName: assemblyName, className: className, description: description, jobArgs: jobArgs, cronExpression: cronExpression, cronExpressionDescription: cronExpressionDescription },
                        success: function (d) {
                            if (d.result == $.lumos.resultType.success) {
                                $.lumos.parentDialog.refresh(2);
                                $.lumos.tips(d.message);
                            }
                            else {
                                $.lumos.tips(d.message);
                            }
                        }
                    });
                });
            }
            return false;
        }

        //-->
    </script>
}
<div class="gbr-row gbr-dialog">
    <div class="gbr-row-title clearfix">
        <div class="pull-left">
            <h5>基本信息</h5>
        </div>
        <div class="pull-right f-tb1-item-pull-right">
            <h6></h6>
        </div>
    </div>
    <table class="f-tb" cellpadding="0" cellspacing="1">
        <tr>
            <td class="f-tb-t" style="width:100px">
                名称：
            </td>
            <td class="f-tb-c">
                <span id="lbl_Name"></span>
            </td>
        </tr>
        <tr>
            <td class="f-tb-t">
                程序集：
            </td>
            <td class="f-tb-c">
                <span id="lbl_AssemblyName"></span>
            </td>
        </tr>
        <tr>
            <td class="f-tb-t">
                类名：
            </td>
            <td class="f-tb-c">
                <span id="lbl_ClassName"></span>
            </td>
        </tr>
        <tr>
            <td class="f-tb-t">
                <span class="required-symbol">*</span>描述：
            </td>
            <td class="f-tb-c">
                <input id="txt_Description" class="input-control" autocomplete="off" type="text" style="width: 350px;" clear="on" />
            </td>
        </tr>
        <tr>
            <td class="f-tb-t">
                参数：
            </td>
            <td class="f-tb-c">
                <input id="txt_JobArgs" class="input-control" autocomplete="off" type="text" style="width: 350px;" clear="on" />
            </td>
        </tr>
        <tr>
            <td class="f-tb-t">
                <span class="required-symbol">*</span>Cron表达式：
            </td>
            <td class="f-tb-c">
                <input id="txt_CronExpression" class="input-control" autocomplete="off" type="text" style="width: 350px;" clear="on" />
            </td>
        </tr>
        <tr>
            <td class="f-tb-t">
                <span class="required-symbol">*</span>Cron表达式描述：
            </td>
            <td class="f-tb-c">
                <input id="txt_CronExpressionDescription" class="input-control" autocomplete="off" type="text" style="width: 350px;" clear="on" />
            </td>
        </tr>
        <tr style="display:none">
            <td class="f-tb-t"></td>
            <td class="f-tb-c">
                <input type="submit" name="btn_Submit" id="btn_Submit" value="确定" class="btn btn-sure" />
                <input type="button" name="btn_Cancle" id="btn_Cancle" value="关闭" class="btn btn-close dialog-close" />
            </td>
        </tr>
    </table>
</div>






