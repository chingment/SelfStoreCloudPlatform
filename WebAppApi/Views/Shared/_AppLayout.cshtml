@{
    ViewBag.Title = "Details";
    Layout = null;
    string strUrl = System.Configuration.ConfigurationManager.AppSettings["custom:WebAppStaticResourceServerUrl"];
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title></title>
    <meta name="description" content="">
    <meta name="keywords" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
    <meta name="renderer" content="webkit">
    <meta http-equiv="Cache-Control" content="no-siteapp" />
    <link href="@(strUrl)/Content/Base/Site.css" rel="stylesheet" type="text/css" />
    <style type="text/css">
        .comfirmdialog {
            position: absolute;
            width: 100%;
            height: 100%;
            left: 0;
            top: 0;
            z-index: 100;
            background-color: rgba(0, 0, 0, 0.5);
            display: none;
        }

        .comfirmdialog-container {
            position: relative;
            width: 70%;
            height: 7rem;
            top: 30%;
            z-index: 110;
            margin: 0 auto;
            background: #fff;
            border-radius: 3px;
        }

        .comfirmdialog-title {
            position: absolute;
            top: 0;
            width: 100%;
            vertical-align: middle;
            height: 3.95rem;
            text-align: center;
            line-height: 3.95rem;
            font-size: 18px;
            color: #111111;
        }

        .comfirmdialog-title span {
            display: block;
            width: 100%;
        }

        .comfirmdialog-btn {
            position: absolute;
            bottom: 0;
            width: 100%;
            display: -webkit-box;
            display: -moz-box;
            text-align: center;
            height: 1.875rem;
            line-height: 1.875rem;
            font-size: 18px;
        }

        .comfirmdialog-btn div {
            -webkit-box-flex: 1;
            -moz-box-flex: 1;
            /*padding: 0.5rem 0;*/
            cursor: pointer;
        }

        .comfirmdialog-btn div:first-child {
            border-top: 1px solid #f8f8f8;
            color: #111111;
        }

        .comfirmdialog-btn div:last-child {
            background: #0099CC;
            color: #FFF;
            border-bottom-right-radius: 3px;
        }
    </style>
    @RenderSection("styles", required: false)
    <script src="@(strUrl)/Scripts/Jquery-1.8.3.min.js"></script>
    <script src="@(strUrl)/Scripts/owl.carousel.min.js"></script>
    <script src="@(strUrl)/Scripts/jquery.lumos.mobile.1.0.0.js?@DateTime.Now"></script>
    @RenderSection("scripts", required: false)



</head>
<body>
    <div class="dialog-loading">
        <img src="@(strUrl+"/Content/base/images/loading.gif")" style="width:32px;" />
    </div>
    <div class="view-main">
        <div class="dialog-tips">
            <span></span>
        </div>
        @RenderBody()
    </div>
    @RenderSection("scriptsbyend", required: false)

    <div class="comfirmdialog">
        <div class="comfirmdialog-container">
            <div class="comfirmdialog-title">
                <span>
                    确定要删除此商品吗？
                </span>
            </div>
            <div class="comfirmdialog-btn">
                <div class="comfirmdialog-btn-canlce">
                    <span>
                        取消
                    </span>
                </div>
                <div class="comfirmdialog-btn-sure">
                    <span>
                        确定
                    </span>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
