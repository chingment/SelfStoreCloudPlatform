@{
    var jsApiConfigParams = Lumos.BLL.SdkFactory.Wx.Instance().GetJsApiConfigParams(Request.Url.AbsoluteUri);
}
<!DOCTYPE html>
<html>
<head>
    <meta content="text/html; charset=utf-8" http-equiv="Content-Type" />
    <meta content="IE=edge" http-equiv="X-UA-Compatible" />
    <meta content="width=device-width,initial-scale=1.0,maximum-scale=1.0,user-scalable=0" name="viewport" />
    <meta http-equiv="Expires" CONTENT="0">
    <meta http-equiv="Cache-Control" CONTENT="no-cache">
    <meta http-equiv="Pragma" CONTENT="no-cache">
    <title>@ViewBag.Title</title>
    <script src="~/Scripts/jquery-1.8.3.min.js"></script>
    <script src="~/Scripts/jquery.tmpl.min.js"></script>
    <link href="~/Content/Default/Base.css?@DateTime.Now.ToString("yyyyMMddHHmmss")" rel="stylesheet" />
    @RenderSection("styles", required: false)
    <script type="text/javascript">

        window.onerror = function (errorMessage, scriptURI, lineNumber, columnNumber, errorObj) {
            $.ajax({
                type: "post",
                url: "/Home/LogJsError",
                dataType: "json",
                data: { errorMessage: errorMessage, scriptURI: '@Request.Url.AbsolutePath', columnNumber: columnNumber, errorObj: errorObj.toString() },
            }).done(function (data) {

            });
        }
    </script>
</head>
<body>
    <div class="dialog-loading">
        <img src="~/Content/default/images/loading.gif" style="width:32px;display: inline-block" />
    </div>
    <div class="dialog-tips">
        <span></span>
    </div>
    <div class="gb">
        @RenderBody()
    </div>
    <script src="~/Scripts/jquery.lumos.mobile.1.0.0.js?@DateTime.Now.ToString("yyyyMMddHHmmss")"></script>
    <script src="http://res.wx.qq.com/open/js/jweixin-1.2.0.js"></script>
    <script>
        $(function () {

            wx.config({
                debug: false,
                appId: '@jsApiConfigParams.Data.appId',
                timestamp: '@jsApiConfigParams.Data.timestamp',
                nonceStr: '@jsApiConfigParams.Data.nonceStr',
                signature: '@jsApiConfigParams.Data.signature',
                jsApiList: [
                    'onMenuShareAppMessage',
                    'onMenuShareTimeline',
                    'showMenuItems',
                    'showAllNonBaseMenuItem',
                    'showOptionMenu',
                    'chooseWXPay',
                    'getLocation',
                    'addCard',
                    'chooseCard',
                    'openCard'
                ]
            });


        })
    </script>
    @RenderSection("scripts", required: false)
</body>
</html>
