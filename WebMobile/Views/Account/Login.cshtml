

<div class="login">
    <div class="it-logo">
        <img class="img" src="/Content/default/images/login-logo.png" />
    </div>
    <div class="it-input">
        <div class="it">
            <input type="text" class="input" name="UserName" id="txt_UserName" placeholder="用户名" />
        </div>
        <div class="it">
            <input type="password" class="input" name="Password" id="txt_Password" placeholder="密码" />
        </div>
    </div>
    <div class="it-btn">
        <div type="button" class="btn operate" id="btn_submit">登录</div>
    </div>
</div>



@section scripts{
    <script type="text/javascript">


        $(document).ready(function () {

            $('#btn_submit').on("click", function () {
                login();
            });

        });

        function login() {
            var userName = $("#txt_UserName").val();
            var passWord = $("#txt_Password").val();
            if (userName.length == 0) {
                $.lumos.tips('用户名不能为空');
                return false;
            }
            if (passWord.length == 0) {
                $.lumos.tips('密码不能空');
                return false;
            }
            $.lumos.postJson({
                url: "/Account/Login",
                data: { userName: userName, passWord: passWord, returnUrl: $.lumos.getUrlParamValue("returnUrl") },
                success: function (d) {
                    if (d.result == $.lumos.resultType.success) {
                        window.location.href = d.data.url;
                    }
                    else {
                        $.lumos.tips(d.message);
                    }
                }
            });
            return false;
        }

    </script>
}