@model  Lumos.Mvc.MessageBoxModel
@{
    ViewBag.Title = "MessageBox";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";

}

@section scripts{
    <script type="text/javascript">
        $(document).ready(function () {

            $.lumos.messageBox({ type: "@Model.Type", isPopup: @(Model.IsPopup==true? "true":"false"), isTop: @(Model.IsTop==true? "true":"false"), title: "@Model.Title", content: "@Model.Content", errorStackTrace: "@Html.Raw(Model.ErrorStackTrace)" })

            setTimeout(goToUrl, 3000);
        });

        function goToUrl(){

            var url="@Model.GoToUrl";
            if(url!=''){
                window.top.location.href=url;
            }
        }

    </script>
}
