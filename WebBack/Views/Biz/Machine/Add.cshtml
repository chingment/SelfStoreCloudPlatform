@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_LayoutHomeDialog.cshtml";
}


@section scripts{
    <script type="text/javascript">


        $(this).ready(function () {
            $.formValidator.initConfig({ formID: "form1", onError: function (msg) { $.lumos.tips(msg); }, onSuccess: function () { return add(); } });
            $("#Model_Machine_DeviceId").formValidator().inputValidator({ min: 1, max: 100, onError: "设备ID不能为空，且不超过100个字符" });
            $("#Model_Machine_MacAddress").formValidator().inputValidator({ min: 1, max: 100, onError: "Mac地址不能为空，且不超过100个字符" });
            $("#Model_Machine_Name").formValidator().inputValidator({ min: 1, max: 100, onError: "名称不能为空，且不超过100个字符" });
        });

        function add() {
            art.dialog.confirm(
'确定要登记？',
function () {
    var postData = $("#form1").serializeArray();

    $.lumos.postJson({
        url: "/Biz/Machine/Add",
        data: postData,
        success: function (d) {
            if (d.result == $.lumos.resultType.success) {
                $.lumos.parentDialog.listTable.loadData();
                $.lumos.tips(d.message, true);
            }
            else {
                $.lumos.tips(d.message);
            }

        }
    });
});
            return false;
        }


        //-->
    </script>
}

<form id="form1">

    <div class="gbr-row-title clearfix">
        <div class="pull-left">
            <h5>基本信息</h5>
        </div>
        <div class="pull-right f-tb1-item-pull-right">
            <h6></h6>
        </div>
    </div>
    <table class="f-tb" cellpadding="0" cellspacing="1" style="width:100%">
        <tr>
            <td class="f-tb-t"><span class="required-symbol">*</span>设备ID：</td>
            <td class="f-tb-c"><input name="Model.Machine.DeviceId" class="input-control" type="text" id="Model_Machine_DeviceId" style="width: 150px;" /></td>
            <td class="f-tb-t"><span class="required-symbol">*</span>Mac地址：</td>
            <td class="f-tb-c"><input name="Model.Machine.MacAddress" class="input-control" type="text" id="Model_Machine_MacAddress" style="width: 150px;" /></td>
        </tr>
        <tr>
            <td class="f-tb-t"><span class="required-symbol">*</span>名称：</td>
            <td class="f-tb-c"><input name="Model.Machine.Name" class="input-control" type="text" id="Model_Machine_Name" style="width: 150px;" /></td>
            <td class="f-tb-t"></td>
            <td class="f-tb-c"></td>
        </tr>
    </table>

</form>

